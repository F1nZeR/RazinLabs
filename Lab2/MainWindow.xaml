<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Decision Tree (ID3)" Height="441" Width="712">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="445*"/>
            <ColumnDefinition Width="259"/>
        </Grid.ColumnDefinitions>
        <Button Click="ButtonBase_OnClick" HorizontalAlignment="Left" Width="103" Height="38" VerticalAlignment="Top" Margin="10,10,0,0">RUN</Button>
        <TreeView Grid.Column="0" x:Name="DecisionTree" Margin="10,53,10,138" />
        <TextBox Grid.Column="0" x:Name="LogTextBlock" IsReadOnly="True" Height="123" VerticalAlignment="Bottom" VerticalScrollBarVisibility="Auto" Margin="10,0,10,10" />
        <WrapPanel x:Name="EditorWrap" Grid.Column="1" Margin="10,53,10,10"/>
        <TextBlock x:Name="TargetAttrTextBlock" Grid.Column="1" Margin="10,10,10,0" TextWrapping="Wrap" Height="38" VerticalAlignment="Top"/>
    </Grid>
</Window>
