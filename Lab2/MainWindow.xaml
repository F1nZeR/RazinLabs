<Window x:Class="Lab2_Correct.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Decision Tree (ID3)" Height="350" Width="625" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="370*"/>
            <ColumnDefinition Width="147*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="214*"/>
            <RowDefinition Height="105*"/>
        </Grid.RowDefinitions>
        <TreeView x:Name="DecisionTree" Margin="10" />
        <TextBox IsReadOnly="True" VerticalScrollBarVisibility="Auto" x:Name="Log" Margin="0,10,0,0" Grid.Row="1" Grid.ColumnSpan="2"
                 Grid.Column="0" />
        <WrapPanel x:Name="EditorWrap" Grid.Row="0" Grid.Column="1" Margin="11,10,9,10"/>
    </Grid>
</Window>
